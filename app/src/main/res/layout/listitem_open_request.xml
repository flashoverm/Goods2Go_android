<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="24dp"
    android:paddingRight="16dp">


    <TextView
        android:id="@+id/text_deliverer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@+id/arrow"
        android:text="@string/text_deliverer_dd" />

    <TextView
        android:id="@+id/deliverer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_deliverer"
        android:layout_alignBottom="@+id/text_deliverer"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/text_departure"
        android:text="TextView"/>

    <RatingBar
        android:id="@+id/rating_deliverer_avg"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/deliverer"
        android:layout_marginLeft="2dp"
        android:layout_toEndOf="@+id/deliverer"
        android:numStars="5"
        android:rating="1.5"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/text_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_deliverer"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="@string/text_pickup_dd" />

    <TextView
        android:id="@+id/pickup_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_departure"
        android:layout_alignBottom="@+id/text_departure"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/text_departure"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_departure"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/text_delivery_dd" />

    <TextView
        android:id="@+id/delivery_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/text_departure"
        android:gravity="center"
        android:text="TextView" />

    <Button
        android:id="@+id/button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/text_accept"
        android:textSize="10sp" />

</RelativeLayout>
