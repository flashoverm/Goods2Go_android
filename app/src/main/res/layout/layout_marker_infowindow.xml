<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:columnCount="2"
    android:rowCount="7">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_row="0"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        app:srcCompat="@drawable/divider_small" />

    <org.goods2go.android.ui.view.AddressView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        app:descriptor="@string/text_to"
        android:layout_row="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_row="2"
        android:text="@string/text_pickup_from_dd" />

    <TextView
        android:id="@+id/pickup_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="bottom|right"
        android:layout_row="2"
        android:text="TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_row="3"
        android:text="@string/text_deliver_until_dd" />

    <TextView
        android:id="@+id/deliver_until"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="4dp"
        android:layout_row="3"
        android:text="TextView" />

    <ImageView
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        app:srcCompat="@drawable/divider_small" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_row="5"
        android:text="@string/text_detail_request"
        android:textAlignment="center"
        android:textStyle="italic" />
</GridLayout>